@model Engie_Test.ViewModels.PowerPlantViewModels

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>


@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-10">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.LabelFor(model => model.PowerPlantUC, htmlAttributes: new { @class = "control-label col-md-10" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PowerPlantUC, new { HtmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PowerPlantUC, "", htmlAttributes: new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ProviderId, htmlAttributes: new { @class = "control-label col-md-10" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.ProviderId, new SelectList(ViewBag.ProvidersList, "Id", "Name"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ProviderId, "", htmlAttributes: new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group custom-control custom-switch">
                <div class="col-md-10">                   
                    @Html.CheckBoxFor(model => model.Enabled, new { @class = "custom-control-input" , @checked = true})
                    <label class="custom-control-label" for="Enabled">@Html.DisplayNameFor(prop => prop.Enabled)</label>
                 </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </div>
    </div>
}


<div>
    @Html.ActionLink("Back to Menu", "Index")
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
